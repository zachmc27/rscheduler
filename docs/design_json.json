      "h2": {
        "size": "text-xl",
        "weight": "font-medium",
        "line_height": "1.5"
      },
      "h3": {
        "size": "text-lg",
        "weight": "font-medium",
        "line_height": "1.5"
      },
      "h4": {
        "size": "text-base",
        "weight": "font-medium",
        "line_height": "1.5"
      }
    },
    "body_text": {
      "size": "text-base",
      "weight": "font-normal",
      "line_height": "1.5"
    },
    "labels": {
      "size": "text-base",
      "weight": "font-medium",
      "line_height": "1.5"
    },
    "buttons": {
      "size": "text-base",
      "weight": "font-medium",
      "line_height": "1.5"
    },
    "inputs": {
      "size": "text-base",
      "weight": "font-normal",
      "line_height": "1.5"

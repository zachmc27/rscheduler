  "border_radius": {
    "sm": "calc(0.625rem - 4px)",
    "md": "calc(0.625rem - 2px)",
    "lg": "0.625rem",
    "xl": "calc(0.625rem + 4px)"
  },
  "styling_instructions": {
    "theme_implementation": "Use CSS custom properties with :root and .dark selectors for theme switching",
    "component_styling": "Apply consistent border radius (0.625rem) to all cards, buttons, and input elements",
    "color_usage": {
      "primary": "Use for main actions, navigation, and brand elements",
      "secondary": "Use for secondary actions and supporting UI elements",
      "accent": "Use sparingly for highlights, notifications, and call-to-action elements",
      "muted": "Use for disabled states, placeholder text, and subtle backgrounds"
    },
    "accessibility": "Ensure sufficient contrast ratios between foreground and background colors",
    "consistency": "Maintain consistent spacing, typography, and color usage throughout the application"
  },
  "component_guidelines": {
    "buttons": {
      "primary": "bg-primary text-primary-foreground with hover states",
      "secondary": "bg-secondary text-secondary-foreground with hover states",
      "accent": "bg-accent text-accent-foreground for important actions"
    },
    "cards": {
      "styling": "bg-card text-card-foreground with border-border",
      "radius": "rounded-lg",
      "shadow": "Apply subtle shadows for depth"
    },
    "inputs": {
      "styling": "bg-input-background text-foreground with border-border",
      "focus": "ring-ring focus states",
      "placeholder": "text-muted-foreground"
    },
    "navigation": {
      "active": "bg-primary text-primary-foreground",
      "inactive": "text-foreground hover:bg-muted"
    },
    "schedule_table": {
      "cells": "border-border with alternating bg-card/bg-muted for rows",
      "headers": "bg-primary text-primary-foreground",
      "employee_names": "bg-secondary text-secondary-foreground"
    }
  },
  "dark_mode_implementation": {
    "toggle": "Include a theme toggle in settings that applies/removes 'dark' class to html element",
    "persistence": "Save theme preference in localStorage",
    "system_preference": "Respect user's system theme preference by default"
  },
  "responsive_design": {
    "breakpoints": "Use Tailwind's default breakpoints (sm, md, lg, xl, 2xl)",
    "mobile_first": "Design mobile-first, then enhance for larger screens",
    "touch_targets": "Ensure minimum 44px touch targets for mobile"
  }
}